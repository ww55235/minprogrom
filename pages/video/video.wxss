.v-scroll {
  height: calc(100vh - 138rpx);
}

.video-scroll-nav {
  display: flex;
  white-space: nowrap;
  height: 50rpx;
}
.video-scroll-nav .navItem {
  padding: 0 10rpx;
}

.video-scroll-nav .navItem .navItemText {
  font-size: 26rpx;
}

.actived {
  border-bottom: 2rpx solid red !important;
}
.v-scroll-item {
  padding: 0 20rpx;
}

.v-scroll-item video {
  width: 100%;
  border-radius: 18rpx;
}
.common {
  width: 100%;
  height: 360rpx;
  border-radius: 18rpx;
}

.v-scroll-item .title {
  width: 70%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 24rpx;
}
