/* pages/recommendSong.wxss */

.header {
  position: relative;
  width: 100%;
  height: 360rpx;
}
.header .header-img {
  width: 100%;
  height: 360rpx;
}
.header .time {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 150rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: white;
}
.header .time .day {
  font-size: 38rpx;
}
.play {
  position: relative;
  top: -20rpx;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  background: #ffffff;
}

.play .title {
  height: 30rpx;
}
.play .title > text {
  height: 30rpx;
  line-height: 30rpx;
}
.play .title .left {
  float: left;
}
.play .title .right {
  float: right;
}

.scroll-content {
  height: calc(100vh - 410rpx);
}
.scroll-content .scroll-item {
  margin: 10rpx 0;
  display: flex;
}
.scroll-item .musicImg {
  margin-right: 20rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.musicInfo {
  display: flex;
  flex-direction: column;
}
.musicInfo .musicName,
.musicInfo .musicSonger {
  font-size: 26rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.scroll-item {
  position: relative;
}
.scroll-item .more {
  position: absolute;
  top: 50%;
  right: 20rpx;
  transform: translateY(-50%);
  right: 10rpx;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
